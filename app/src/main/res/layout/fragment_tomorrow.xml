<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        tools:text="20 July"/>

    <ImageView
        android:id="@+id/iv_temperature_high"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_temperature_high"
        app:layout_constraintBottom_toBottomOf="@id/tv_temperature_high"
        android:src="@drawable/arrow_upward"/>

    <TextView
        android:id="@+id/tv_temperature_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        app:layout_constraintStart_toEndOf="@id/iv_temperature_high"
        android:textSize="32sp"
        tools:text="32C"/>

    <ImageView
        android:id="@+id/iv_temperature_low"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_temperature_high"
        app:layout_constraintTop_toTopOf="@id/tv_temperature_low"
        app:layout_constraintBottom_toBottomOf="@id/tv_temperature_low"
        android:src="@drawable/arrow_upward"
        android:rotation="180"/>

    <TextView
        android:id="@+id/tv_temperature_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        app:layout_constraintStart_toEndOf="@id/iv_temperature_low"
        android:textSize="32sp"
        tools:text="18C"/>

    <ImageView
        android:id="@+id/iv_weather_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/lightsleetandthunder"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_temperature_high"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_weather_icon"
        android:layout_marginHorizontal="16dp"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        tools:text="Light sleet showers and thunder"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        android:layout_marginTop="24dp"
        tools:listitem="@layout/cell_hour"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/rv_hours"
        app:layout_constraintStart_toStartOf="@id/rv_hours"
        app:layout_constraintEnd_toEndOf="@id/rv_hours"
        android:background="?android:attr/listDivider" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        app:showAnimationBehavior="outward"
        app:hideAnimationBehavior="inward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>