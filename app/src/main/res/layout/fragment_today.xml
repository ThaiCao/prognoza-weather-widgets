<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_current_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_weather_icon"
            android:layout_marginEnd="8dp"
            android:textColor="@color/high_emphasis"
            android:textSize="16sp"
            tools:text="19 July, 18:32"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_date_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_weather_icon"
            android:layout_marginEnd="8dp"
            android:textSize="48sp"
            android:textColor="@color/high_emphasis"
            tools:text="23 C"/>

        <TextView
            android:id="@+id/tv_feels_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/med_emphasis"
            app:layout_constraintTop_toBottomOf="@id/tv_temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_weather_icon"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            tools:text="Feels like 18C"/>

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="86dp"
            android:layout_height="86dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:src="@drawable/lightsleetandthunder"/>

        <TextView
            android:id="@+id/tv_precipitation_forecast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/med_emphasis"
            app:layout_constraintTop_toBottomOf="@id/tv_feels_like"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_weather_icon"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            tools:text="Light sleet showers and thunder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_current_hour"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/cell_hour"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        app:showAnimationBehavior="outward"
        app:hideAnimationBehavior="inward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include layout="@layout/layout_error"
        android:visibility="gone"
        android:id="@+id/error"/>

</androidx.constraintlayout.widget.ConstraintLayout>